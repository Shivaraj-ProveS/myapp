<div id="status_div">

  <div class='row-fluid'>&nbsp;</div>
  <div class='row-fluid'>
  	<% if !@ref_info.blank? %>
	  	Reference No:  <b><%= @ref_info %></b>
	  <% end %>
  </div>
  <div class='row-fluid'>&nbsp;</div>
  <div class='row-fluid'>
  	<%= @status_info %>
  	<% Rails.logger.debug "view txn_status="+@txn_status %>
  </div>

  <div class='row-fluid'>&nbsp;</div>
  <div class='row-fluid'>
  	<% if @txn_status == 'Complete' %>
    	<%= link_to "Take a new payment", payments_path, { class: 'btn btn-link'} %>
    <% end %>
  </div>

	<script type="text/javascript">
  	txn_status = '<%=@txn_status%>';
	</script>
</div>

